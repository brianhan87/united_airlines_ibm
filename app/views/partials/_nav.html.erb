<div class="small-12 columns nav">
  <% if current_user %>
    <div class="logout">
      <%= link_to "Logout", logout_path, class: "logout-btn" %>
    </div>
  
    
  <% else %>
    <div class="small-6 small-centered columns login">
      <%= link_to "Login", login_path, class: "login-btn" %>  
    </div>
    <div class="small-6 small-centered columns sign-up">
      <%= link_to "Sign up", new_user_path, class: "sign-up-btn" %>  
    </div>
    
    
  <% end %>
</div>